    "rules": [
        {
    		"id": "text_universal",
            "priority": 0,
            "urls": [
                ".*"
            ],
            "values": {
                "@extractor": {
                	"id": "gofetch.article.extractor"
                }
            }
        },
        {
        	"id": "imgur",
            "priority": 1,
            "urls": [
                "http://imgur.com/[a-zA-Z0-9]+"
            ],
            "values": {
                "type": "image",
                "src": {
                    "@extractor": {
                        "id": "gofetch.selector.extractor",
                        "params": {
                            "selector": "#image img",
                            "attribute": "src"
                        }
                    }
                }
            }
        }
    ]
}
